{% extends 'html.twig' %}

{% block style %}
<link rel="stylesheet" href="{{ uri.base.path }}media/css/acme/cover.css" />
{% endblock %}

{% block siteTitle %}Acme Cover{% endblock %}

{% block navbar %}{% endblock %}

{% block body %}
    <div class="site-wrapper">

        <div class="site-wrapper-inner">

            <div class="cover-container">

                <div class="masthead clearfix">
                    <div class="inner">
                        <h3 class="masthead-brand">Formosa Cover Theme</h3>
                        <ul class="nav masthead-nav">
                            <li><a href="{{ uri.base.path }}">Home</a></li>
                            <li class="active"><a href="#">Cover</a></li>
                        </ul>
                    </div>
                </div>

                <div class="inner cover">
                    {% if (content.isNull() is empty) %}
                        {{ content.text|raw }}
                        <p>
                            Congrats, you imported schema success. You can run this command to rollback:

                        <pre class="text-left"><code class="bash">$ php bin/phinx rollback</code></pre>
                        </p>
                    {% else %}
                        <h1>You havn't import DB content</h1>
                        <p>
                            Please run this command:

                            <pre class="text-left"><code class="bash">$ php bin/phinx migrate</code></pre>
                        </p>
                    {% endif %}
                </div>

                <div class="mastfoot">
                    <div class="inner">
                        <p>Cover template for <a href="http://getbootstrap.com">Bootstrap</a>, by <a href="https://twitter.com/mdo">@mdo</a>.</p>
                    </div>
                </div>

            </div>

        </div>

    </div>
{% endblock %}

{% block copyright %}{% endblock %}
