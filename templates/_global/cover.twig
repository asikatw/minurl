{% extends 'html.twig' %}

{% block style %}
<link rel="stylesheet" href="{{ uri.base.path }}media/css/cover.css" />
<link rel="stylesheet" href="{{ uri.base.path }}media/css/main.css" />
{% endblock %}

{% block navbar %}{% endblock %}

{% block body %}
<div class="site-wrapper">

    <div class="site-wrapper-inner">

        <div class="cover-container">

            <div class="masthead clearfix">
                <div class="inner text-center">
                    <h3 class="masthead-brand"><a href="{{ uri.base.path }}">MinURL</a></h3>
                    {#<ul class="nav masthead-nav">#}
                        {#<li><a href="{{ uri.base.path }}">Home</a></li>#}
                        {#<li class="active"><a href="#">Cover</a></li>#}
                    {#</ul>#}
                </div>
            </div>

            <div class="message row">
                <div class="col-md-8 col-md-offset-2">
                    {{ helper.view.showFlash(flash)|raw }}
                </div>
            </div>

            <div class="inner cover">
               {% block main_body %}{% endblock %}
            </div>

        </div>

    </div>

</div>
{% endblock %}

{% block copyright %}{% endblock %}
