<!doctype html>
<html lang="zh-tw">
<head>
    <meta charset="UTF-8">
    <title>{% block siteTitle %}{% endblock %}</title>

    <link rel="shortcut icon" type="image/x-icon" href="{{ uri.base.path }}media/images/favicon.ico" />
    <meta name="generator" content="Formosa | Windwalker Framework" />
    {% block meta %}
    {% endblock %}

    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">
    {% block style %}
    {% endblock %}

    <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
    {% block script %}
    {% endblock %}

</head>
<body>
    {% block navbar %}
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="{{ uri.base.path }}">Formosa</a>
            </div>
            <div class="collapse navbar-collapse">
                <ul class="nav navbar-nav">
                    {% block nav %}
                        <li class="active"><a href="{{ uri.base.path }}">Home</a></li>
                    {% endblock %}
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    {#<li class="pull-right"><a href="{{ uri.base.path }}admin">Admin</a></li>#}
                </ul>
            </div>
            <!--/.nav-collapse -->
        </div>
    </div>
    {% endblock %}

    {% block body %}Content{% endblock %}

    {% block copyright %}
    <div id="copyright">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">

                    <hr />

                    <footer>
                        &copy; Formosa {{ datetime.format('Y') }}
                    </footer>
                </div>
            </div>
        </div>
    </div>
    {% endblock %}
</body>
</html>