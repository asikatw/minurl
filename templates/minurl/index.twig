{% extends 'cover.twig' %}

{% block siteTitle %}Minurl - The modern url shorten service.{% endblock %}

{% block main_body %}
   <div id="index-form" class="row">
       <form action="{{ uri.base.path }}" method="post" id="entryForm" name="entryForm">
           <h1>Make Your URL Shorter</h1>

           <div class="form-group col-md-12">
               <input type="url" name="entry[url]" class="form-control input-lg" id="entryUrl" placeholder="Enter URL for short">
           </div>

           <p class="form-url-desc">
               Paste your long url here, then Minurl will help you get a short url.
           </p>

           <div class="checkbox">
               <label>
                   <input type="checkbox" name="entry[preview]" class="" value="1"> Preview and secure
               </label>
           </div>

           <div class="col-md-10 col-md-offset-1 form-horizontal">
               <div class="form-group">
                   <label for="customUrl" class="col-sm-3 control-label">Custom URL</label>
                   <div class="col-sm-6">
                       <input type="text" name="entry[alias]" class="form-control" id="customUrl" placeholder="My custom URL">
                   </div>
               </div>

               <div class="form-group">
                   <label for="expiredTime" class="col-sm-3 control-label">Expired</label>
                   <div class="col-sm-6">
                       <input type="text" name="entry[expired]" class="form-control" id="expiredTime" placeholder="Expired Time">
                   </div>
               </div>

               <div class="form-group">
                   <label for="password" class="col-sm-3 control-label">Password</label>
                   <div class="col-sm-6">
                       <input type="text" name="entry[password]" class="form-control" id="password" placeholder="Password" autocomplete="off">
                   </div>
               </div>

               <div class="form-buttons">
                   <button class="btn btn-primary btn-block btn-lg">Short this URL</button>
               </div>
           </div>
       </form>
   </div>
{% endblock %}
